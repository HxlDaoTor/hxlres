/* pages/initiate/initiate.wxss */
.bdy{
  background:#f5f5f5;
  min-height: 100vh;
}
.prizeTp{
  background:#fff;
  height: 160px;
  display: flex;
  justify-content: center;
 width:100%;
}
.prizeTp .btnImg{
 display: flex;
 justify-content: center;
align-items: center;
flex-direction: column;
height:80px;
margin-top:40px;
}
.prizeTp .btnImg text{
  font-size: 14px;
  color:#ababab;
  margin-top:10px;
}
.prizeTp .btnImg image{
  width:60px;
  height:48px;
  vertical-align: middle;
}
.prizeTp .uploadimg{
 
  vertical-align: middle;
width:100%;
height:100%;
}
.specifications{
  padding:0 15px;
  border-bottom: 1px solid  #f2f2f2;
  font-size: 14px;
 margin-top:10px;
 background:#fff;
}
.specifications .specName{
  display:flex;
  justify-content: space-between;
  align-items: center;
  height:46px;
}
.specifications .specName:first-child{
  border-bottom: 1px solid #f2f2f2;
}
.specifications .specName input{
  text-align: right;
  width:60%;
}
.specifications .specName view{
  display: flex;
  flex-direction:row-reverse;
 width: 60%;
 align-items: center;
}
.conditions{
  display:flex;
  justify-content: space-between;
  align-items: center;
  height:42px;
  color:#ababab;
  font-size: 14px;
  padding:0 15px;
}
.times{
  background:#fff;
  height:46px;
  display: flex;
  justify-content: space-between;
  align-items: center; 
  font-size: 14px;
  padding:0 15px;
}
.times text:last-child{
  color:#ababab;
}
.txter{
  background:#fff;
  height:100px;
  font-size: 14px;
  padding: 15px;
}
.txter textarea{
  width:100%;
  height:100%;
}
.popWin{
  position:fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background:rgba(0,0,0,0.8);
  z-index: 1111
}
.popWin .popWinTxt{
  width:100%;
  height:100%;
}
.popWin .contet{
  background: #fff;
  position: absolute;
  bottom:0;
  width: 100%;
  display: flex;
   flex-direction: column;
     /* flex-direction: column;  */
    justify-content: center; 
    align-items: center; 
    box-sizing: border-box; 
    animation:mymove 0.3s 1; 
}
@keyframes mymove
{
    from { transform: translateY(380rpx)  }
    to   {transform: translateY(0rpx)}
}
.popWin .contet view{
 font-size: 14px;
 border-bottom: 1px solid #f2f2f2;
 width: 100%;
 height:46px;
 line-height: 46px;
 text-align: center;
 background:#fff;
}
.popWin .contet view:last-child{
  border:none;
  color:#ababab;
}
.linkTip{
  color:#ababab;
  font-size: 12px;
  padding:15px 0;
  text-align: center;
}
.submit{
  padding: 0 15px 15px;
  margin-top:10px;
}
.submit button{
 background:#ff5555;
 border-radius:20px;
height:40px;
line-height:39px;
font-size:14px;
border:none;
width:100%;
color:#fff;
}
.submit button::after{
  border:none; 
}
.senior{
  margin-top:10px;

}
.senior .copy{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
 background:#fff;
 height:60px;
  padding:0 15px;
}
.senior .copy input{
  background:#f5f5f5;
  padding:6px 10px;
  width:60%;
}
.senior .copy text{
   height:35px;
   line-height: 35px;
   background:#fae3c4;
   border-radius: 20px;
   padding:0 20px;
   color:#c7924b;
}
.senior .caption{
  background:#fff;
  padding:15px 15px 20px;
}
.senior .caption textarea{
  font-size: 14px;
  width:100%;
  height:80px;
}
.senior .caption .picture{
   display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top:10px;
}
.senior .caption .picture text{
  background: #f2f2f2;
  font-size: 30px;
  color:#ababab;
  height:60px;
  width: 60px;
  line-height: 60px;
  text-align: center;
  margin-bottom: 5px;
}
.senior .caption .picture .imgs{
  width:60px;
  height:60px;
  overflow: hidden;
  margin-bottom: 5px;
  position: relative;
}
.senior .caption .picture .imgs image{
  width: 100%;
  height:auto;
  display: initial;
}
.senior .caption .picture .imgs text{
  position: absolute;
  top:4px;
  right:4px;
  text-align: center;
  line-height: 18px;
  width:18px;
  height:18px;
  font-size: 12px;
  color:#fff;
  border-radius: 50%;
  background:rgba(0,0,0,0.4);
}
.senior .caption .picture .nul{
  width: 60px;
  height:0;
}