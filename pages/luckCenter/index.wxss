.body{
  background:#f5f5f5;
}
.topData{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: center;
  height:200px;
  background:#ff5555;
}
.topData .round{
  width: 120px;
  height:120px;
  border-radius: 50%;
  background:rgba(255,255,255,.6);
  overflow: hidden;
  position: relative;
  border:2px solid #fff;
  /* box-shadow:  0 0 12px rgba(151, 10, 10, 0.4); */
  display: flex;
  justify-content: center;
  align-items: center;
}
.topData .round image{
  position: absolute;
  width: 240px;
  height:240px;
}
.topData .round image:first-child{
animation:mymove 6s infinite;
right: 0;
}

.topData .round image:nth-child(2){
animation:mymo 5s infinite;
left:0;
}
@keyframes mymove
{
from {right:0px;}
to {right:-120px;}
}
@keyframes mymo
{
from {left:0px;}
to {left:-120px;}
}
.topData .round text{
  color:#fff;
  font-size: 34px;
  position: relative;
  z-index: 1;
  /* font-weight: bold; */
}
