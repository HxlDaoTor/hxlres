/* pages/goodsAddress/index.wxss */
.bdy{
  min-height: 100vh;
  background:#f5f5f5;
  font-size: 14px;
  color:#4d4d4d;
}
.bdy .titlAdd{
  padding:6px 10px;
  font-size: 12px;
}
.bdy .writeAdd{
 background:#fff;
 display: flex;
 padding:10px;
  justify-content: space-between;
  align-content: center;
}
.bdy .writeAdd input{
   white-space:nowrap;
   overflow:hidden;
   text-overflow: ellipsis;
   width: 90%;
     height:30px;
  line-height: 30px;
}
.bdy .writeAdd text{
  height:30px;
  line-height: 30px;
}
.bdy .btn{
  background:#fff;
  padding:10px;
  bottom: 0;
  left:0;
  right:0;
  position:fixed;

}
.bdy .btn button{
  background: #808080;
  font-size: 14px;
  height:40px;
  line-height: 40px;
  border-radius: 20px;
  width: 100%;
  border:none;
}
.bdy .btn button::after{
  border: none;
}
/*弹窗样式*/
.popupWin{
  position: fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  width:100%;
  background:rgba(0,0,0,.8);
  z-index: 1000;


}
.popupWin .popw{
  height: 100%;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.popupWin .popw .Popup{
  width:80%;
  background:#fff;

 border-radius: 2px;
 font-size: 14px;
 color:#4d4d4d;
}
.popupWin .popw .Popup .contxt{
  text-align: center;
  height:56px;
  line-height: 56px;
  border-bottom: 1px solid #f5f5f5;
}
.popupWin .popw .Popup .bttn{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.popupWin .popw .Popup .bttn button{
  width: 50%;
  border:0;
  background:none;
  font-size: 14px;
  border-radius: 0;
  height: 40px;
  line-height: 40px;
}
.popupWin .popw .Popup .bttn button:first-child{
  border-right: 1px solid #f5f5f5;
}
.popupWin .popw .Popup .bttn button:last-child{
  color:#2f5f91;
}
.popupWin .popw .Popup .bttn button::after{
  border: none;
}