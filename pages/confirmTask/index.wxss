/* pages/confirmTask/index.wxss */
.bdy{
 min-height: 100vh;
 background:#f5f5f5;
padding:15px;
}
.bdy .taskData,.bdy .rules{
  background: #fff;
  border-radius: 4px;
  padding:15px;
  font-size: 14px;
  margin-bottom: 15px;
  position: relative;
}
.bdy .taskData .modify{
  position: absolute;
  top:0px;
  right:10px;
  color:#25c237;
  font-size: 14px;
}
.bdy .taskData view,.bdy .rules view{
  height:36px;
  line-height: 36px;
}
.bdy .taskData .title,.bdy .rules .title{
  font-size: 18px;
  text-align: center;
  font-weight: bold;
}
.bdy .taskData view text:last-child{
  color:#808080;
  margin-left: 10px;
}
.bdy .rules view{
  height:36px;
  line-height: 36px;
}
.bdy .rules view text{
  color:#4d4d4d;
}
.subBtn button{
  height:40px;
  line-height: 38px;
  background:#ff5555;
  border:none;
  border-radius: 20px;
  color:#fff;
}
.subBtn button::after{
  border:none;
}
/* 弹窗样式 */
.Popup{
  position: fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  width:100%;
  background:rgba(0,0,0,.6);
  z-index: 1000;
}
.Popup .parent{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width:100%;
  height:100%;
}
.Popup .parent .contet{
  background:#fff;
  width:300px;
  border-radius: 6px;
 padding:15px 0;
display: flex;
flex-direction: column;
align-items: center;
position: relative;
}
.Popup .parent .contet .tilit{
  font-size: 16px;
  font-weight: bold;

}
.Popup .parent .contet .contt{
 color:#ababab;
 font-size: 14px;
 margin-top: 15px;
}
.Popup .parent .contet .tippo{
 color:#25c237;
 font-size: 16px;
 margin-top: 8px;
}
.Popup .parent .contet button{
  height:40px;
  color:#fff;
  width:70%;
  line-height: 38px;
  background: #ff5555;
  font-size: 14px;
   border-radius: 20px;
   margin-top:15px;
}
.Popup .parent .contet .closeBtn{
  width:26px;
  height:26px;
  color:#ababab;
  font-size: 24px;
  line-height: 25px;
  text-align: center;
  border-radius: 50%;
  position: absolute;
  right: 4px;
  top:4px;
}