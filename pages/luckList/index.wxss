/* pages/luckList/index.wxss */
.bdy{
  background:#f5f5f5;
  min-height: 100vh;
  overflow: hidden;
  padding:0 10px;
}
.bdy .goods{
  border-radius: 6px;
  margin-top: 10px;
  background:#fff;

  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 10px;
  
 overflow: hidden;
}

.bdy .goods text.titl{
    display: block;
  text-align: left;
  width: 100%;
  font-size: 14px;
  color:#4d4d4d;
  line-height: 26px;
}
.bdy .goods .flx{
  display:flex;
  justify-content: space-between;
  align-items: center;
 width: 100%;
 padding:0 10px;
}
.bdy .goods .flx .tip{
  color:red;
  font-size: 12px;
}
.bdy .goods .flx .tcp{
  color:#11b478;
  font-size: 12px;
}
.bdy .goods .tipp{
  color:#ababab;
  font-size: 12px;
}
.bdy .goods image{
  width: 100%;
}
/* 弹窗样式 */
.Popup{
  position: fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  width:100%;
  background:rgba(0,0,0,.6);
  z-index: 1000;
}
.Popup .parent{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width:100%;
  height:100%;
}
.Popup .parent .contet{
  background:#fff;
  width:300px;
  border-radius: 6px;
 padding:15px 0;
display: flex;
flex-direction: column;
align-items: center;
position: relative;
}
.Popup .parent .contet .tilit{
  font-size: 16px;
  font-weight: bold;

}
.Popup .parent .contet .contt{
 color:#ababab;
 font-size: 14px;
 margin-top: 15px;
}
.Popup .parent .contet .tippo{
 color:#25c237;
 font-size: 16px;
 margin-top: 8px;
}
.Popup .parent .contet button{
  height:40px;
  color:#fff;
  width:70%;
  line-height: 38px;
  background: #ff5555;
  font-size: 14px;
   border-radius: 20px;
   margin-top:15px;
}
.Popup .parent .contet .closeBtn{
  width:26px;
  height:26px;
  color:#ababab;
  font-size: 24px;
  line-height: 25px;
  text-align: center;
  border-radius: 50%;
  position: absolute;
  right: 4px;
  top:4px;
}