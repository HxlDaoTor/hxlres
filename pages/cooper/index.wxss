  margin:20px 0;
  text-align: center;
}
.bdy .introduce .tip text{
  color:#ababab;
  font-size: 10px;
}
.fixed{
  position: fixed;
  height:60px;
  background:#fff;
  border-top: 1px solid #e8e8e8;
  left:0;
  right:0;
  bottom:0;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fixed button{
  border-radius:20px;
  height:40px;
  line-height: 39px;
 font-size: 14px;
 border:none;
 width:36%;
}
button::after{
  border:none; 
}
.fixed button:last-child{
  background:#ff5555;
  color:#fff;
}
.fixed button:first-child{
  border:1px solid #4d4d4d;
  color:#4d4d4d;
}
